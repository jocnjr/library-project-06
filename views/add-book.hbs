<form action="/books/add-book" method="post">
  <label for="">Title:</label>
  <input type="text" name="title">
  <br><br>
  <label for="">Author:</label>
  <select name="author">
    <option value="">select an author</option>
    {{#each authors}}
    <option value="{{_id}}">{{name}} {{lastName}}</option>
    {{/each}}
  </select>
  <br><br>

  <label for="">Description:</label>
  <input type="text" name="description">
  <br><br>

  <label for="">Rate:</label>
  <input type="number" name="rating">
  <br><br>

  <label>Address</label>
  <input id="address" type="text" name="address" placeholder="enter the address">
  <br><br>

  <input id="latitude" type="hidden" name="latitude" placeholder="latitude">
  <input id="longitude" type="hidden" name="longitude" placeholder="longitude">
  <br><br>


  <button type="submit">ADD</button>
</form>